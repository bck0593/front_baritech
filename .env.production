# Azure App Service Environment Variables
# これらの変数をAzure Portal > App Service > Configuration > Application settingsで設定してください

# Node.js設定
NODE_ENV=production

# Next.js設定
NEXT_TELEMETRY_DISABLED=1

# ポート設定（Azureが自動で設定）
# PORT=8080

# セキュリティ設定
NEXTAUTH_URL=https://app-002-gen10-step3-2-node-oshima13.azurewebsites.net
NEXTAUTH_SECRET=your-secret-key-here

# アプリケーション設定
APP_NAME=DogMATEs
APP_VERSION=1.0.0

# FastAPI バックエンドのURL（実際のFastAPIサーバーのURLに置き換える）
NEXT_PUBLIC_API_URL=https://your-fastapi-backend.azurewebsites.net

# 認証関連
NEXT_PUBLIC_AUTH_SECRET=your-production-auth-secret-key

# 本番環境ではモックデータを使用しない
NEXT_PUBLIC_USE_MOCK_DATA=false

# デバッグ設定（本番環境では false にする）
DEBUG=false
